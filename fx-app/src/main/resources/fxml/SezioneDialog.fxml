<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sas.fxapp.ui.SezioneDialogController"
      spacing="10">
  <padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
  </padding>

  <!-- TabPane: Dettagli Sezione + Ricette -->
  <TabPane tabClosingPolicy="UNAVAILABLE">
    <tabs>
      <!-- Tab 1: Dettagli Sezione -->
      <Tab text="Dettagli">
        <content>
          <GridPane hgap="10" vgap="10">
            <Label text="Nome sezione:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="tfSezNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
          </GridPane>
        </content>
      </Tab>

      <!-- Tab 2: Ricette -->
      <Tab text="Ricette">
        <content>
          <VBox spacing="10">
            <ToolBar>
              <Button text="Nuova Ricetta"   onAction="#onAddRicetta"/>
              <Button text="Modifica Ricetta" onAction="#onEditRicetta"/>
              <Button text="Elimina Ricetta"  onAction="#onDeleteRicetta"/>
            </ToolBar>
            <TableView fx:id="ricetteTable" prefHeight="200.0">
              <columns>
                <TableColumn fx:id="colRicId"   text="ID"   prefWidth="50"/>
                <TableColumn fx:id="colRicNome" text="Nome" prefWidth="200"/>
              </columns>
            </TableView>
          </VBox>
        </content>
      </Tab>
    </tabs>
  </TabPane>

  <!-- OK / Annulla -->
  <HBox spacing="10" alignment="CENTER_RIGHT">
    <Button text="OK"      onAction="#onOk"/>
    <Button text="Annulla" onAction="#onCancel"/>
  </HBox>
</VBox>
