<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Contenitore verticale con spaziatura tra gli elementi -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sas.fxapp.ui.RicettaDialogController"
      spacing="10">

  <!-- Margini interni al VBox -->
  <padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
  </padding>

  <!-- Griglia per allineare etichetta e campo di testo -->
  <GridPane hgap="10" vgap="10">
    <!-- Etichetta per il nome della ricetta -->
    <Label text="Nome ricetta:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <!-- Campo di testo per inserire/modificare il nome -->
    <TextField fx:id="tfRicNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
  </GridPane>

  <!-- Barra dei pulsanti in basso, allineati a destra -->
  <HBox spacing="10" alignment="CENTER_RIGHT">
    <!-- Conferma le modifiche -->
    <Button text="OK"      onAction="#onOk"/>
    <!-- Annulla e chiude il dialog senza salvare -->
    <Button text="Annulla" onAction="#onCancel"/>
  </HBox>
</VBox>
