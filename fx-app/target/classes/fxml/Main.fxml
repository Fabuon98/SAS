<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Layout principale a bordo -->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sas.fxapp.ui.MainController">

  <!-- Barra superiore con i pulsanti di controllo Evento -->
  <top>
    <ToolBar>
      <!-- Apre il dialog per creare un nuovo evento -->
      <Button text="Nuovo Evento"   onAction="#onAddEvento"/>
      <!-- Apre il dialog per modificare l'evento selezionato -->
      <Button text="Modifica Evento" onAction="#onEditEvento"/>
      <!-- Elimina l'evento selezionato dalla tabella e dal JSON -->
      <Button text="Elimina Evento"  onAction="#onDeleteEvento"/>
    </ToolBar>
  </top>

  <!-- Area centrale con la tabella degli eventi -->
  <center>
    <TableView fx:id="eventiTable">
      <columns>
        <!-- Colonna per l'ID dell'evento -->
        <TableColumn fx:id="colId"   text="ID"    prefWidth="50"/>
        <!-- Colonna per il nome dell'evento -->
        <TableColumn fx:id="colNome" text="Nome"  prefWidth="200"/>
        <!-- Colonna per la data dell'evento -->
        <TableColumn fx:id="colData" text="Data"  prefWidth="150"/>
      </columns>
    </TableView>
  </center>

</BorderPane>
